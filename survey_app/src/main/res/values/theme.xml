<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Opendatakit" parent="Theme.AppCompat.Light.NoActionBar">
	    <item name="android:scrollbarThumbHorizontal">@drawable/thumb</item>
	    <item name="android:scrollbarThumbVertical">@drawable/thumb</item>
	    <item name="android:scrollbarSize">2.5mm</item>
	    <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
	    <item name="android:scrollbarAlwaysDrawHorizontalTrack">true</item>
	    <item name="android:fadeScrollbars">false</item>
        <item name="android:progressBarStyle">@android:style/Widget.Holo.Light.ProgressBar.Horizontal</item>
        <item name="android:indeterminateProgressStyle">@android:style/Widget.Holo.Light.ProgressBar</item>
		<item name="colorControlNormal">@color/white</item>
	</style>

	<style name="NavigationDrawerTop" parent="Opendatakit">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textSize">20dp</item>
		<item name="android:listDivider">@android:color/transparent</item>
		<item name="listPreferredItemHeightSmall">60dp</item>
	</style>

	<style name="NavigationDrawerBottom" parent="Opendatakit">
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textSize">20dp</item>
		<item name="android:paddingTop">5dp</item>
	</style>

	<style name="TextLabel" parent="TextAppearance.Design.Hint">
		<item name="android:textSize">16dp</item>
	</style>

	<style name="CheckBox" parent="Opendatakit">
		<item name="colorControlNormal">@color/black</item>
		<item name="colorControlActivated">@color/check_for_updates_button_background</item>
	</style>
    <style name="PopupMenuStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/check_for_updates_button_background</item>
    </style>

</resources>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        >

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />

        <FrameLayout
            android:id="@+id/main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_height="match_parent"
        android:layout_width="300dp"
        android:layout_gravity="start"
        >

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view_top"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_gravity="top"
            app:headerLayout="@layout/navigation_bar_header"
            app:menu="@layout/navigation_bar_menu"
            android:background="@color/navigation_bar_menu_background"
            android:theme="@style/NavigationDrawerTop"
            android:overScrollMode="never"
            />

        <android.support.design.widget.NavigationView
            android:id="@+id/navigation_view_bottom"
            android:layout_height="100dp"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            app:menu="@layout/navigation_bar_footer"
            android:background="@color/navigation_bar_menu_background"
            android:theme="@style/NavigationDrawerBottom"
            android:overScrollMode="never"
            />

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
